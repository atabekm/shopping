<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/menu_size"
    android:layout_height="@dimen/menu_size">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_shopping_cart_white_24dp"/>

    <TextView
        android:id="@+id/cart_badge_counter"
        android:layout_width="@dimen/badge_size"
        android:layout_height="@dimen/badge_size"
        android:layout_marginEnd="@dimen/badge_margin"
        android:layout_marginTop="@dimen/badge_margin"
        android:background="@drawable/round"
        android:gravity="center"
        android:layout_gravity="top|end"
        android:textColor="@android:color/white"
        android:textSize="@dimen/badge_text_size"
        android:visibility="gone"
        tools:text="1"/>

</FrameLayout>